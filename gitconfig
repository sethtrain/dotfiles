[core]
    editor = vim
    excludesfile = ~/.gitignore
[alias]
    aa = add --all
    amend = commit --amend
    ci = commit
    cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
    co = checkout
    dc = diff --cached
    di = diff
    div = divergence
    fa = fetch --all
    ff = merge --ff-only
    gn = goodness
    gnc = goodness --cached
    h = !git head
    head = !git l -1
    l = log --graph --abbrev-commit --date=relative
    la = !git l --all
    pom = push origin master
    pullff = pull --ff-only
    r = !git l -20
    ra = !git r --all
    st = status
[color]
    branch = auto
    diff = auto
    status = auto
[github]
    user = sethtrain
[user]
    name = Seth Buntin
    email = seth.buntin@gmail.com
[merge]
    tool = threesome
[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true
[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
